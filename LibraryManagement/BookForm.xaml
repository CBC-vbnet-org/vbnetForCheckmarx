<UserControl x:Class="BookForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Carrel"
             xmlns:wpf="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="608" d:DesignWidth="430">
    <Grid>

        <Grid Margin="0,10,0,-10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="23*"/>
                <ColumnDefinition Width="226*"/>
            </Grid.ColumnDefinitions>

            <!--Icons-->
            <materialDesign:PackIcon Kind="Qrcode" Foreground="{Binding BorderBrush, ElementName=NameTextBox}" Margin="24,94,382,0" RenderTransformOrigin="0.535,0.417" Width="24" Height="24" HorizontalAlignment="Stretch" Grid.ColumnSpan="2" >
            </materialDesign:PackIcon>

            
            <materialDesign:PackIcon Kind="BookOpenVariant" Foreground="{Binding BorderBrush, ElementName=NameTextBox}" Margin="24,152,0,0" RenderTransformOrigin="0.684,0.417" Width="24" Height="24" Grid.ColumnSpan="2" >
            </materialDesign:PackIcon>

           
            <materialDesign:PackIcon Kind="AccountMultiple" Foreground="{Binding BorderBrush, ElementName=NameTextBox}" Margin="23,208,0,0" RenderTransformOrigin="0.577,0.5" Width="24" Height="24" Grid.ColumnSpan="2" >
            </materialDesign:PackIcon>

         
            <materialDesign:PackIcon Kind="Store" Foreground="{Binding BorderBrush, ElementName=NameTextBox}" Margin="23,318,0,0" RenderTransformOrigin="0.684,0.417" Width="24" Height="24" Grid.ColumnSpan="2" >
            </materialDesign:PackIcon>
            
            
            <materialDesign:PackIcon Kind="CurrencyInr" Foreground="{Binding BorderBrush, ElementName=NameTextBox}" Margin="24,264,382,0" RenderTransformOrigin="0.684,0.417" Width="24" Height="24" HorizontalAlignment="Stretch" Grid.ColumnSpan="2" >
            </materialDesign:PackIcon>

           
            <materialDesign:PackIcon Kind="NotificationClearAll" Foreground="{Binding BorderBrush, ElementName=NameTextBox}" Margin="24,378,0,0" RenderTransformOrigin="0.577,0.417" Width="24" Height="24" Grid.ColumnSpan="2" >
            </materialDesign:PackIcon>

            
            <materialDesign:PackIcon Kind="ViewStream" Foreground="{Binding BorderBrush, ElementName=NameTextBox}" Margin="24,437,0,0" RenderTransformOrigin="0.684,0.417" Width="24" Height="24" Grid.ColumnSpan="2" >
            </materialDesign:PackIcon>
        </Grid>
        
       
        <!--Flat Buttons-->
        <StackPanel Height="608" Width="430" VerticalAlignment="Bottom" HorizontalAlignment="Left">

            <Button x:Name="Cancel" Style="{StaticResource MaterialDesignFlatButton}"
                        
                                        IsCancel="True"
                                        Margin="0,555,48,0"
                                        Command="materialDesign:DialogHost.CloseDialogCommand" Content="CANCEL" Height="36" MinWidth="64" HorizontalAlignment="Right" Width="90"/>

            <Button x:Name="Add" Style="{StaticResource MaterialDesignFlatButton}"
                                        IsDefault="True"
                                        Margin="0,-35,145,0"
                                        Command="materialDesign:DialogHost.CloseDialogCommand" Content="ADD" Height="36" HorizontalAlignment="Right" Width="68"/>
        </StackPanel>
        

        <!--Text Fields-->
        <TextBox 
				    x:Name="ISBN"
				    materialDesign:HintAssist.Hint="ISBN no" Margin="71,103,71,481" RenderTransformOrigin="0.493,0.458" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Height="24" Width="288"/>

        
        <TextBox 
            x:Name="Name"
            materialDesign:HintAssist.Hint="Name" Margin="0,0,71,419" RenderTransformOrigin="0.504,0.423" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Height="26" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="288"/>

     
        <ComboBox materialDesign:HintAssist.Hint="Authors"
                  IsEditable="True" materialDesign:HintAssist.HintOpacity=".26" Margin="71,218,71,362">
            <ComboBoxItem>Dr.M.A.Rama</ComboBoxItem>
            <ComboBoxItem>E.Balaguruswamy</ComboBoxItem>
            <ComboBoxItem>Srikanth.S</ComboBoxItem>
            <ComboBoxItem>Forouzan</ComboBoxItem>
        </ComboBox>

       
        <TextBox 
            x:Name="Publisher"
            materialDesign:HintAssist.Hint="Publisher" Margin="0,0,71,255" RenderTransformOrigin="0.5,0.462" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Height="26" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="288"/>

       
        <TextBox 
            x:Name="Price"
            materialDesign:HintAssist.Hint="Price" Margin="0,0,71,311" RenderTransformOrigin="0.5,0.5" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Height="26" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="288"/>

       
        <TextBox 
            x:Name="Edition"
            materialDesign:HintAssist.Hint="Edition" Margin="0,0,71,198" RenderTransformOrigin="0.5,0.5" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Height="26" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="288"/>

        
        <TextBox 
            x:Name="Rack"
            materialDesign:HintAssist.Hint="Rack" Margin="0,0,71,137" RenderTransformOrigin="0.5,0.423" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Height="26" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="288"/>

    </Grid>
</UserControl>