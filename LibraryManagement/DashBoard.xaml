<Window x:Class="DashBoard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextElement.FontFamily="Roboto"
        TextOptions.TextFormattingMode="Ideal" 
        TextOptions.TextRenderingMode="Auto"        
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        xmlns:local="clr-namespace:Carrel"
        mc:Ignorable="d"
        Title="DashBoard" Height="720" Width="1280"
        WindowState="Maximized"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <!--<Rectangle Fill="#212121" materialDesign:ShadowAssist.ShadowDepth="Depth3" Stroke="Black" Grid.RowSpan="2"  Height="120" VerticalAlignment="Top"/>-->
        <!--<Rectangle Fill="#212121" materialDesign:ShadowAssist.ShadowDepth="Depth3" Stroke="Black" Grid.RowSpan="2"  Height="120" VerticalAlignment="Top"/>-->
        <materialDesign:Card materialDesign:ShadowAssist.ShadowDepth="Depth0"
                             UniformCornerRadius="0"
                             Height="400" 
                             VerticalAlignment="top" 
                             Grid.RowSpan="2" 
                             Background="{DynamicResource PrimaryHueMidBrush}">
            <!--Search Bar-->

            <StackPanel VerticalAlignment="Center" Width="800">
                <Grid Height="40">
                    <materialDesign:PackIcon
            Width="24" Kind="Magnify" 
                    Height="24" 
                    Foreground="Black"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"/>
                    <TextBlock/>
                    <TextBox 
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        materialDesign:HintAssist.Hint="Search"
                             BorderBrush="{DynamicResource PrimaryHueMidBrush}"
                             SelectionBrush="{DynamicResource PrimaryHueDarkForegroundBrush}"
                        VerticalAlignment="Center"
                        Foreground="White"
                        Height="40"/>

                </Grid>
            </StackPanel>
        </materialDesign:Card>
        <materialDesign:Card MinWidth="800"
                             MinHeight="500"
                             materialDesign:ShadowAssist.ShadowDepth="Depth5" Margin="110,129,85,0" Grid.RowSpan="1"/>
        <!--BookDialog-->
        <materialDesign:DialogHost 
                                    materialDesign:ShadowAssist.ShadowDepth="Depth5"
                                   MinWidth="1280"
                                   MinHeight="720" 
                                   VerticalAlignment="Top" 
                                                                      CloseOnClickAway="True" Margin="-4,0" RenderTransformOrigin="0.513,0.546">

            <materialDesign:DialogHost.DialogContent>
                <local:BookForm x:Name="add"></local:BookForm>
            </materialDesign:DialogHost.DialogContent>
         <!--Fab Button-->
            <Button Style="{StaticResource MaterialDesignFloatingActionAccentButton}" Margin="1275,680,0,56" Grid.Row="1"  Command="materialDesign:DialogHost.OpenDialogCommand" RenderTransformOrigin="7.75,4.625" Width="56" Height="56" HorizontalAlignment="Left">
                <TextBlock><InlineUIContainer>
                    <materialDesign:PackIcon Kind="Plus" Height="24" Width="24" />
                </InlineUIContainer></TextBlock>
            </Button>
        </materialDesign:DialogHost>
    </Grid>

</Window>
