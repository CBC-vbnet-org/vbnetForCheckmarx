        <Rectangle Fill="#00c78c" Grid.Column="2" Margin="10,50,44,243" Grid.Row="5"/>
        <Label Width="190" Height="50" Content="Change SEMESTER" Foreground="#ffffff" Grid.Column="2" Margin="0,0,57,243" Grid.Row="5" FontSize="21" FontWeight="SemiBold"/>
        <Rectangle Fill="#00ff66" Grid.Column="3" Margin="13,50,17,236" Grid.Row="5" Height="60"/>
        <Path Fill="#283592" HorizontalAlignment="Left" VerticalAlignment="Top" Width="110" Grid.Column="3" Grid.Row="5" Data="M45.720783,0 L55.719928,0.13089371 55.065452,50.126183 110,50.126183 110,60.126183 54.934547,60.126183 54.280071,110.12147 44.280929,109.99057 44.933689,60.126183 0,60.126183 0,50.126183 45.064598,50.126183 z" Height="110.121" Margin="68,133,0,0" RenderTransformOrigin="0.499999998508454,0.500594315103155" Stretch="Fill">
