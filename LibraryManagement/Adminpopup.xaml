        <Label Width="136" Height="50" Content="Add ADMIN" Grid.Column="3" Foreground="#ffffff" Margin="0,0,52,243" Grid.Row="5" FontSize="21" FontWeight="SemiBold"/>
    </Grid>
</UserControl>
